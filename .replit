# .replit

run = "python3 app.py"
language = "python3"
entrypoint = "app.py"
hidden = [".config", "**/__pycache__", "**/.mypy_cache", "**/*.pyc"]
modules = ["python-3.11"]

[nix]
channel = "stable-22_11"
packages = ["cacert"]

[env]
PYTHONPATH = "$PYTHONPATH:${REPL_HOME}"
PATH = "${REPL_HOME}/venv/bin:${PATH}"
# --- 修改這裡設定你想要的端口 ---
PORT = "7777"  # 例如，設定為 5000

[packager]
language = "python3"
ignoredPackages = ["unit_tests"]

[packager.features]
packageSearch = true
guessImports = true

[languages.python3]
pattern = "**/*.py"
syntax = "python"

[languages.python3.languageServer]
start = ["pylsp"]

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 41504860
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"

[[ports]]
localPort = 7777
externalPort = 80

